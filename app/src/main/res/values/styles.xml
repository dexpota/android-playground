<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!-- Custom Alert Dialog theme -->
    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert" >
        <!--<item name="dialogPreferredPadding" format="dimension">32dp</item>-->
        <item name="buttonBarStyle">@style/ButtonBarStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Button.Dialog.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Button.Dialog</item>
    </style>

    <style name="ButtonBarStyle">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Button.Dialog" parent="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>

        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>

        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Button.Dialog.Negative">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorAccent</item>
    </style>
</resources>
